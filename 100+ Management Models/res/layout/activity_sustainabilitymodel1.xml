<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:duplicateParentState="true" >
 <!-- Hier wordt een tekstweergave gedefineerd --> 
        <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal"
        android:text="Management Models"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
 <!-- Hier wordt een tekstweergave gedefineerd -->        
         <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:text="Sustainability Modellen"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />
 <!-- Hier wordt een afbeelding gedefineerd -->
         <ImageView
             android:id="@+id/imageView1"
             android:layout_width="230dp"
             android:layout_height="200dp"
             android:layout_below="@+id/textView3"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="20dp"
             android:src="@drawable/model16" />
 <!-- Hier wordt een tekstweergave gedefineerd -->
         <TextView
             android:id="@+id/textView3"
             android:layout_width="250dp"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView1"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="16dp"
             android:text="Hart, S. &amp; Milstein, M. 2003, The Sustainable Value Framework" />

</RelativeLayout>