<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    
   <!-- Hier wordt een tekstweergave gedefineerd --> 
        <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal"
        android:text="Management Models"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
  <!-- Hier wordt een tekstweergave gedefineerd --> 
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/sustainability" />
  <!-- Hier wordt een tekstweergave gedefineerd --> 
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:text="Sustainability"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />
  <!-- Hier wordt een knop gedefineerd -->         
		<Button
             android:id="@+id/button1"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/imageView1"
             android:layout_marginTop="26dp"
             android:layout_toRightOf="@+id/textView2"
             android:onClick="onClickmod1"
             android:text="Model 6" />
  <!-- Hier wordt een knop gedefineerd -->
         <Button
             android:id="@+id/button2"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/button1"
             android:layout_alignBottom="@+id/button1"
             android:layout_toLeftOf="@+id/textView2"
             android:onClick="onClickmod1"
             android:text="Model 7" />
 <!-- Hier wordt een tekstweergave gedefineerd --> 
         <TextView
             android:id="@+id/textView3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/button1"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="14dp"
             android:text="Fashion 8 (People, Planet, Profit) has become Element 1 (“Sustainability”), as it is now the dominant paradigm and starting point for most organisational leaders." />

</RelativeLayout>
